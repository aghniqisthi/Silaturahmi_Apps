<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ECF3EE"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    tools:context=".dosen.kaprodi.DetailPlottingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:title="Pendaftaran Mahasiswa"
            app:titleTextAppearance="@style/BodyBold"
            app:titleTextColor="@color/black" />

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Detail Mahasiswa"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/detail"
            tools:layout_editor_absoluteX="20dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.captain_miao.optroundcardview.OptRoundCardView
                    android:id="@+id/card_status"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:layout_constraintTop_toTopOf="@+id/card_luaran"
                    app:optRoundCardBackgroundColor="#B8DE39"
                    app:optRoundCardCornerRadius="10dp"
                    app:optRoundCardLeftBottomCorner="false"
                    app:optRoundCardRightBottomCorner="false">

                    <TextView
                        android:id="@id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:textColor="#465A03"
                        android:textSize="14sp" />

                </com.github.captain_miao.optroundcardview.OptRoundCardView>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="14dp">

                    <TextView
                        android:id="@+id/npm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_regular"
                        android:text="NPM"
                        android:textSize="14sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/txt_npm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/npm" />

                    <TextView
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Nama Mahasiswa"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_npm" />

                    <TextView
                        android:id="@+id/txt_nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/nama" />

                    <TextView
                        android:id="@+id/nip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="NIP"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_nama" />

                    <TextView
                        android:id="@+id/txt_nip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/nip" />

                    <TextView
                        android:id="@+id/namadospem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Nama Pembimbing MBKM"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_nip" />

                    <TextView
                        android:id="@+id/txt_namadospem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/namadospem" />

                    <TextView
                        android:id="@+id/posisi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Posisi Kegiatan Topik"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_namadospem" />

                    <TextView
                        android:id="@+id/txt_posisi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/posisi" />

                    <TextView
                        android:id="@+id/awalkeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Awal Kegiatan"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_posisi" />

                    <TextView
                        android:id="@+id/txt_awalkeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/awalkeg" />

                    <TextView
                        android:id="@+id/akhirkeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Akhir Kegiatan"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_awalkeg" />

                    <TextView
                        android:id="@+id/txt_akhirkeg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/akhirkeg" />

                    <TextView
                        android:id="@+id/periode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="Periode"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/txt_akhirkeg" />

                    <TextView
                        android:id="@+id/txt_periode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="20082010113"
                        android:textSize="14sp"
                        app:layout_constraintTop_toBottomOf="@id/periode" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/pembimbing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pembimbing MBKM"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/cardView7" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layout_dospem"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:boxBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/pembimbing" >

            <AutoCompleteTextView
                android:id="@+id/edit_pembimbing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:inputType="none"
                android:text="Pilih Dosen Pembimbing MBKM"
                android:textColor="#606060" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageButton
            android:id="@+id/btn_delete"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#E57373"
            android:src="@drawable/rounded_delete_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/layout_dospem"
            app:layout_constraintEnd_toEndOf="@id/layout_dospem"
            app:layout_constraintTop_toTopOf="@id/layout_dospem" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="40dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/green"
            android:indeterminateTintMode="src_atop"
            android:translationZ="50dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@+id/paketkonversi"
            app:layout_constraintStart_toEndOf="@+id/paketkonversi"
            app:layout_constraintTop_toTopOf="@+id/paketkonversi" />

        <TextView
            android:id="@+id/paketkonversi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Paket Konversi"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_simpan" />

        <TextView
            android:id="@+id/txt_emptyPaket"
            android:textSize="14sp"
            android:text="Paket konversi belum dibuat"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paketkonversi" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_paketkonversi"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/paketkonversi">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="14dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/txt_namapaketkonversi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Paket Konversi"
                        android:textColor="@color/green"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageButton"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageButton
                        android:id="@+id/imageButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/shape_button"
                        android:rotation="90"
                        android:scaleType="centerInside"
                        android:src="@drawable/rounded_arrow_back_ios_new_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/linear_hidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/constraint">

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:id="@+id/tableRow"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp">

                            </TableRow>
                        </TableLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/txt_totalsks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Total SKS : "
                        android:textSize="14sp" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_simpan"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:backgroundTint="#6A9E76"
            android:fontFamily="@font/poppins_semibold"
            android:text="Simpan"
            app:layout_constraintTop_toBottomOf="@+id/layout_dospem" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>