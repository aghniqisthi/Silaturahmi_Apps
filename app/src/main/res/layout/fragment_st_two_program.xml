<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mahasiswa.daftar.StTwoProgramFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Program Magang / Stupen"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewbtg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="*"
            android:textColor="#FF3B30"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toEndOf="@id/textView3" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_pilihprogram"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Pilih Program MSIB"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#458654"
            android:textSize="14sp"
            android:visibility="gone"
            app:icon="@drawable/rounded_add_24"
            app:iconPadding="10dp"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:strokeColor="#458654" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_detailprogram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
<!--                android:visibility="gone"-->

                <com.github.captain_miao.optroundcardview.OptRoundCardView
                    android:id="@+id/card_status"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:optRoundCardBackgroundColor="#FFCC00"
                    app:optRoundCardCornerRadius="10dp"
                    app:optRoundCardLeftBottomCorner="false"
                    app:optRoundCardRightBottomCorner="false">

                    <TextView
                        android:id="@+id/txt_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/poppins_semibold"
                        android:gravity="center"
                        android:text="Program Anda Belum Diverifikasi"
                        android:textColor="#465A03"
                        android:textSize="14sp" />

                </com.github.captain_miao.optroundcardview.OptRoundCardView>

                <com.github.captain_miao.optroundcardview.OptRoundCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginVertical="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/posisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Posisi Kegiatan Topik"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_posisi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/program"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Program Magang"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_program"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/jenis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Jenis Magang"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_jenis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mitra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Nama Mitra"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_mitra"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/pic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Nama PIC"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_pic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tgldftrbuka"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tanggal Pendaftaran Dibuka"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_tgldftar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tgldftartutup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tanggal Pendaftaran Ditutup"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_tgldftartutup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tglmulai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tanggal Mulai Kegiatan"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_tglmulaikeg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tglakhirkeg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Tanggal Berakhir Kegiatan"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txt_tglakhirkeg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:textSize="14sp" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_ganti"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Ganti Program"
                            android:textAllCaps="false"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/scorllbiew"
                            app:strokeColor="@color/green" />

                    </LinearLayout>
                </com.github.captain_miao.optroundcardview.OptRoundCardView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_italic"
            android:text="Periksa transkrip Anda terlebih dahulu sebelum menentukan SKS yang diambil"
            android:textColor="#606060"
            android:textFontWeight="600"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>