<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_fileLogbook"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Lihat Dokumen"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="#458654"
        android:textSize="14sp"
        android:layout_margin="4dp"
        app:icon="@drawable/outline_text_snippet_24"
        app:iconPadding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#458654" />

    <ImageButton
        android:id="@+id/delete_logbook"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:backgroundTint="@color/white"
        android:src="@drawable/rounded_close_24"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/btn_fileLogbook"
        app:layout_constraintEnd_toEndOf="@id/btn_fileLogbook"
        app:layout_constraintTop_toTopOf="@+id/btn_fileLogbook" />

</androidx.constraintlayout.widget.ConstraintLayout>